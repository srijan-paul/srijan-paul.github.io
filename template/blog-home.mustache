<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/assets/css/common.css">
	<link rel="stylesheet" href="/assets/css/blog.css">
	<link rel="stylesheet" href="/assets/css/post.css">
	{{! analytics }}
	<script data-goatcounter="https://injuly.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
	<title>injuly / Blog</title>
</head>

<body>
	<div class="main">

		{{! The navbar }}
		<div class="nav-container">
			<div class="website-name">
				injuly
			</div>

			<nav>
				<a href="/" class="nav-link">index</a>
				<a href="/about" class="nav-link">about</a>
				<a href="/blog" class="active-nav-link nav-link">blog</a>
				<a href="/now" class="nav-link">now</a>
			</nav>
		</div>
		<hr>

		{{&content}}
		<div class="blog-index">
			<ul id="post-list" class="post-list">
			</ul>
		</div>
	</div>

	<script src="/util.js" type="text/javascript"></script>
	<script>

		// Get all the post data.
		const posts =  [
			{{#posts}}
				{{#meta.is_blog_post}}
					{
						tags: [{{#meta.tags}}"{{.}}",{{/meta.tags}}],
						date: new Date("{{&meta.date}}"),
						url: "/{{dstPath}}",
						title: `{{&meta.title}}`
					},
				{{/meta.is_blog_post}}
			{{/posts}}
		];
		
	
		// sort the posts by date
		posts.sort((a, b) => b.date - a.date)

		// Returns an <li> element from a post object.
		function getListElementFromPost(post) {
			const li = document.createElement("li");
			li.id = post.name;
			
			const a = document.createElement("a");
			a.innerText = post.title;
			a.href = post.url;
			li.appendChild(a);

			const date = document.createElement("span");
			date.innerHTML = `${dateToString(post.date)}`;
			date.classList.add("post-list-date");
			li.appendChild(date);

			return li;
		}

		// Create a map mapping an year to the posts made in that year
		// number -> Array<post> 
		const postsInYear = {};
		for (const post of posts) {
			const year = post.date.getFullYear();
			postsInYear[year] = postsInYear[year] || [];
			postsInYear[year].push(post);
		}

		// Now create a <ul> element for each year and append all the posts
		// made in an year to it
		const indexNode = document.querySelector(".blog-index");
		const years = Object.keys(postsInYear).sort((a, b) => b - a);
		for (const year of years) {
			const ul = document.createElement("ul");
			ul.classList.add("post-list");
			const posts = postsInYear[year];
			posts.forEach(post => {
				const li = getListElementFromPost(post);
				ul.appendChild(li);
			})

			const title = document.createElement("h3");
			title.classList.add("blog-index-year");
			title.innerText = year;
			indexNode.appendChild(title);
			indexNode.appendChild(ul);
		}

	</script>

</body>

</html>
